@using inventory.view.Controllers;
@using inventory.view.Entities;
@model InventoryModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<Supplier> suppliers = ViewBag.Suppliers;
}
<style>
    .page-title {
        margin: 20px 0px;
    }

    .image-main-container {
        display: flex;
        justify-content: center;
    }

    .action-image-container, .action-image {
        width: 150px;
        height: 120px;
    }

    .action-image {
        object-fit: cover;
    }

    form {
        margin-top: 35px;
    }

    .input-container {
        display: flex;
        align-items: center;
        justify-content: space-between;
        min-width: 350px;
    }

    label {
        padding-right: 5px;
    }

    input[type=text], input[type=date], select {
        width: 280px;
        height: 35px;
        margin: 5px 0;
    }

    .form-container {
        display: flex;
        justify-content: center;
    }

    .form-actions-container {
        margin-top: 25px;
        display: flex;
        justify-content: flex-end;
    }

    .nav-button {
        padding: 0px 15px;
        display: flex;
        align-items: center;
        background-color: rgba(154, 0, 0, 0.72);
        border-radius: 5px;
        color: #FFFFFF;
        cursor: pointer;
        text-decoration: none;
    }

        .nav-button:hover {
            color: #FFFFFF;
        }

    .action-button {
        height: 35px;
        border-radius: 5px;
        background: #00639A;
        color: #FFFFFF;
        font-size: 15px;
        border: none;
        margin-left: 5px;
    }

    @@media only screen and (max-width: 320px) {
        .input-container {
            min-width: 0px;
        }

        input, select {
            width: 210px;
        }
    }
</style>
<h5 class="page-title">Edit inventory</h5>
<div class="image-main-container">
    <div class="action-image-container">
        <img src="~/images/checklist.png" class="action-image" />
    </div>
</div>
<div class="form-container">
    <form asp-controller="Inventory" asp-action="Update" method="post">
        <div>
            <span asp-validation-for=Name class="text-danger"></span>
        </div>
        <div class="input-container">
            <label asp-for=Name></label>
            <input type="text" asp-for=Name id="name" />
        </div>
        <div>
            <span asp-validation-for=Quantity class="text-danger"></span>
        </div>
        <div class="input-container">
            <label asp-for="Quantity"></label>
            <input type="text" asp-for="Quantity" />
        </div>
        <div>
            <span asp-validation-for=Cost class="text-danger"></span>
        </div>
        <div class="input-container">
            <label asp-for="Cost"></label>
            <input asp-for="Cost" id="cost" />
        </div>
        <div class="input-container">
            <label for="type">Type</label>
            <select asp-for="Type" id="type">
                <option value="Row Materials">Raw Material</option>
                <option value="Finished Goods">Finished Goods</option>
                <option value="Work In Progress">Work In Progress</option>
            </select>
        </div>
        <div class="input-container">
            <label for="supplier">Supplier</label>
            <select asp-for="Supplier" id="supplier">
                @for (int i = 0; i < suppliers.Count; i++)
                {
                    <option value="@suppliers[0].Name">@suppliers[i].Name</option>
                }
            </select>
        </div>
        <div class="input-container">
            <label for="hasexpiry">Expires</label>
            <select asp-for="HasExpiry" id="hasexpiry">
                <option value="No">No</option>
                <option value="Yes">Yes</option>
            </select>
        </div>
        <div>
            <label for="expiry-date">Expiry Date</label>
            <input type="date" asp-for=ExpiryDate id="expiry-date" />
        </div>
        <div class="form-actions-container">
            <a asp-controller="Inventory" asp-action="Index" class="nav-button">Cancel</a>
            <button type="submit" class="action-button">Update Inventory</button>
        </div>
    </form>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    @*<script src="~/lib/jquery/dist/jquery.js"></script>*@
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://code.jquery.com/ui/1.13.1/jquery-ui.min.js"></script>
    <!-- Include other necessary libraries here -->

    <script>
        $(function () {
            $('#name').autocomplete({
                source: function (request, response) {
                    $.ajax({
                        url: '/Inventory/SearchName',
                        data: { name: request.term },
                        dataType: 'json',
                        type: 'GET',
                        success: function (data) {
                            response($.map(data, function (item) {
                                return item;
                            }));
                        }
                    });
                },
                minLength: 2 // Minimum characters to trigger auto-complete
            }).autocomplete("instance")._renderItem = function (ul, item) {
                var status = document.querySelectorAll(".ui-helper-hidden-accessible")[0];
                status.style.display = 'none';

                return $("<li>")
                    .append("<div>" + item.value + "</div>")
                    .appendTo(ul);
            };
        });

    </script>
}
