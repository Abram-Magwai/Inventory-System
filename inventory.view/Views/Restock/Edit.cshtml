@model RestockModel
@{
    ViewData["Title"] = "Edit Restock plan";
    List<InventoryModel> inventories = ViewBag.Inventories;
}
<style>
    .page-title {
        margin: 20px 0px;
    }

    .image-main-container {
        display: flex;
        justify-content: center;
    }

    .action-image-container, .action-image {
        width: 150px;
        height: 120px;
    }

    .action-image {
        object-fit: cover;
    }

    form {
        margin-top: 35px;
    }

    .input-container {
        display: flex;
        align-items: center;
        justify-content: space-between;
        min-width: 350px;
    }

    label {
        padding-right: 5px;
    }

    input[type=text], input[type=date], select {
        width: 280px;
        height: 35px;
        margin: 5px 0;
    }

    .form-container {
        display: flex;
        justify-content: center;
    }

    .form-actions-container {
        margin-top: 25px;
        display: flex;
        justify-content: flex-end;
    }

    .nav-button {
        padding: 0px 15px;
        display: flex;
        align-items: center;
        background-color: rgba(154, 0, 0, 0.72);
        border-radius: 5px;
        color: #FFFFFF;
        cursor: pointer;
        text-decoration: none;
    }

        .nav-button:hover {
            color: #FFFFFF;
        }

    .action-button {
        height: 35px;
        border-radius: 5px;
        background: #00639A;
        color: #FFFFFF;
        font-size: 15px;
        border: none;
        margin-left: 5px;
    }

    @@media only screen and (max-width: 320px) {
        .input-container {
            min-width: 0px;
        }

        input, select {
            width: 210px;
        }
    }
</style>
<h5 class="page-title">Edit Restock Plan</h5>
<div class="image-main-container">
    <div class="action-image-container">
        <img src="~/images/restock.png" class="action-image" />
    </div>
</div>
<div class="form-container">
    <form asp-action="Edit" method="post">
        <input asp-for="Id" hidden />
        <div>
            <span asp-validation-for=Name class="text-danger"></span>
        </div>
        <div class="input-container">
            <label asp-for="Name"></label>
            <select asp-for="Name" id="supplier">
                @for (int i = 0; i < inventories.Count; i++)
                {
                    <option value="@inventories[0].Name">@inventories[i].Name</option>
                }
            </select>
        </div>
        <div>
            <span asp-validation-for=Quantity class="text-danger"></span>
        </div>
        <div class="input-container">
            <label asp-for="Quantity"></label>
            <input type="text" asp-for="Quantity" />
        </div>
        <div class="form-actions-container">
            <a asp-controller="Settings" asp-action="Index" class="nav-button">Cancel</a>
            <button type="submit" class="action-button">Update Plan</button>
        </div>
    </form>
</div>